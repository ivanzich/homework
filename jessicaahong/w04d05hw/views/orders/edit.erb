<div class="form_div">
	<h1>Edit an existing order</h1>
	<p class="instructional_text"><span style="color:red">*</span> required</p>
	<br>
	<div class="form">
		<form method="post" action="/orders/<%= @order.id %>">
		<input type="hidden" name="_method" value="put">
		<div class="form_entry">
			<label for="order[dish_name]">Dish Name<span style="color:red">*</span>:</label>
			<input type="text" name="order[dish_name]" value="<%= @order.dish_name %>" required>
			<br>
		</div>
		<div class="form_entry">
			<label for="order[dish_type]">Dish Type:</label>
			<input type="text" name="order[dish_type]" value="<%= @order.dish_type %>">
			<br>
		</div>
		<div class="form_entry">
			<label for="order[table_number]">Table Number<span style="color:red">*</span>:</label>
			<input type="text" name="order[table_number]" value="<%= @order.table_number %>" required>
			<br>
		</div>
		<div class="form_entry">
			<label for="order[rush?]">Rush Order?</label>
			<input type="checkbox" name="order[rush?]" value="true">
			<br>
		</div>
		<div class="form_entry">
			<label for="order[special_requests]">Special Requests:</label>
			<input type="text" name="order[special_requests]" value="<%= @order.special_requests %>">
			<br>
		</div>
		<div class="form_entry">
			<input type="submit" class="btn btn-default" value="Edit Order">
		</div>
		</form>
	</div>
</div>
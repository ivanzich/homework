<div class="form_div">
	<h1>Create a new order</h1>
	<p class="instructional_text"><span style="color:red">*</span><b> required</b></p>
	<br>
	<div class="form">
		<form method="post" action="/orders">
			<div class="form_entry">
				<label for="order[dish_name]">Dish Name<span style="color:red">*</span>:</label>
				<input type="text" name="order[dish_name]" placeholder="ex. cheese pizza" required>
				<br>
			</div>
			<div class="form_entry">
				<label for="order[dish_type]">Dish Type:</label>
				<input type="text" name="order[dish_type]" placeholder="appetizer/main/dessert">
				<br>
			</div>
			<div class="form_entry">
				<label for="order[table_number]">Table Number<span style="color:red">*</span>:</label>
				<input type="text" name="order[table_number]" placeholder="ex. 8" required>
				<br>
			</div>
			<div class="form_entry">
				<label for="order[rush?]">Rush Order?</label>
				<input type="checkbox" name="order[rush?]" value="true">
				<br>
			</div>
			<div class="form_entry">
				<label for="order[special_requests]">Special Requests:</label>
				<input type="text" name="order[special_requests]" placeholder="ex. extra chili flakes">
				<br>
			</div>
			<div class="form_entry">
			<input type="submit" class="btn btn-default" value="Add Order">
			</div>
		</form>
	</div>
</div>
<form action="/tasks" method="POST" type="POST" class="edit-or-new-form" id="new-task">
      <input type="hidden" name="_method" value="post">
       <legend>Add Task</legend>

       <div class="form-group">
        <!-- <label for="">label</label> -->
        <p>
          <label for="task[title]">Title: </label>
          <input type="text" class="form-control input" name="task[title]" >
        </p>
        <p>
          <label for="task[description]">Description: </label>
          <input type="text"  class="form-control input" name="task[description]" >
        </p>

        <p>
          <label for="task[due_date]">Due date: </label>
          <input type="text"  class="form-control input due-date widget" name="task[due_date]" >
        </p>

        <p>
          <label for="task[project]">Project: </label>
          <input type="text"  class="form-control input" name="task[project]" >
        </p>
      </div>



       <button type="submit" class="btn btn-primary text-center" id="new-submit">Add</button>
</form>

<h2>Jobs</h2>

<a class="btn" href="/jobs/new">Post a New Job</a>

<div class="jobs">
  <% @jobs.each do |job| %>
  <div class="row">
    <ul>
      <li>
        <h2>
          <a href="/jobs/<%= job.id %>">
            <%= job.title %>
          </a>
        </h2>
        <h3>
        <a href="/jobs/<%= job.id %>">
            <%= job.description %>
          </a>
        </h3>
      </li>
      <li>
        <a href="/jobs/<%= job.id %>/edit">
          Edit
        </a>
      </li>
      <li>
        <li>
          <form method="/jobs/<%= job.id %>/delete" action="post">
            <button>Delete</button>
          </form>
        </li>
      </li>
    </ul>
  </div>
  <% end %>
</div>

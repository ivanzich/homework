<h2>Edit job</h2>

<form action='/jobs/<%= "#{@job.id}" %>' method="post">
  <label for="job[title]">Title:</label>
  <input name="job[title]" value='<%= "#{@job.title}" %>'>

  <label for="job[company]">Company:</label>
  <input name="job[company]" value='<%= "#{@job.company}" %>'>

  <label for="job[zip]">Zip:</label>
  <input name="job[zip]" value='<%= "#{@job.zip}" %>'>

  <label for="job[salary]">Salary:</label>
  <input name="job[salary]" value='<%= "#{@job.salary}" %>'>

  <label for="job[description]">Description:</label>
  <input name="job[description]" value='<%= "#{@job.salary}" %>'>

  <input type="submit" value="Create">
</form>

